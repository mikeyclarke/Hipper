{
    "compilerOptions": {
        "module": "esnext",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "removeComments": false,
        "preserveConstEnums": true,
        "sourceMap": true,
        "strict": true,
        "baseUrl": "./src/ts",
        "target": "ES2015",
        "lib": [
            "es2017",
            "dom",
            "es2018.promise"
        ],
        "typeRoots": ["./node_modules/@types", "./src/ts/@types"]
    },
    "include": ["src/ts"]
}
