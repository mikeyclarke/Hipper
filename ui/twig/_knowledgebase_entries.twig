<ol class="c-document-list">
    {% for entry in knowledgebaseEntries %}
        <li class="c-document-list__document" data-id="{{ entry.id }}">
            <a class="c-document-list__document-link" href="{{ entry.route }}">
                <svg class="c-document-list__document-icon" aria-hidden="true"><use xlink:href="#icon-sprite__{{ entry.type }}"/></svg>
                <h2 class="c-document-list__document-name">{{ entry.name }}</h2>
                <p class="c-document-list__document-description">{{ entry.description }}</p>
                <span class="c-document-list__document-updated-timestamp">Updated <time datetime="{{ entry.updated.utc_datetime }}" title="{{ entry.updated.verbose }}">{{ entry.updated.time_ago }}</time></span>
            </a>
        </li>
    {% endfor %}
</ol>
