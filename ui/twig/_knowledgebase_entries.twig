<ol class="c-card-list--pad-bottom">
    {% for entry in knowledgebase_entries %}
        {% include '_card_list_item.twig' with {
            avatar_icon_type: entry.type,
            avatar_type: 'icon',
            is_discreet: true,
            link_href: entry.route,
            timestamp: entry.updated,
            timestamp_label: 'Updated',
            title: entry.name,
            description: entry.description,
        } only %}
    {% endfor %}
</ol>
