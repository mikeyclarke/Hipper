{% import 'custom_elements/_context_menu.twig' as context_menu %}

{% set team_route = path('front_end.app.team.create', {
    return_to: app.request.getRequestUri(),
    subdomain: organization.subdomain,
}) %}
{% set project_route = path('front_end.app.project.create', {
    return_to: app.request.getRequestUri(),
    subdomain: organization.subdomain,
}) %}

{{ context_menu.start(html_id) }}
    {{ context_menu.group_start() }}
        {{ context_menu.item_start('link', { href: team_route }) }}
            {{ context_menu.item_text('New team') }}
        {{ context_menu.item_end('link') }}

        {{ context_menu.item_start('link', { href: project_route }) }}
            {{ context_menu.item_text('New project') }}
        {{ context_menu.item_end('link') }}
    {{ context_menu.group_end() }}

    {{ context_menu.group_start() }}
        {{ context_menu.item_start('link', { href: '/organization-settings/members/invite' }) }}
            {{ context_menu.item_text('Invite people') }}
        {{ context_menu.item_end('link') }}
    {{ context_menu.group_end() }}
{{ context_menu.end() }}
