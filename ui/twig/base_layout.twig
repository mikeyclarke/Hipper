<!doctype html>
<html{% if htmlClassList %} class="{{ htmlClassList|join(' ') }}"{% endif %} lang="en">
    <head>
        <link rel="dns-prefetch" href="{{ asset_domain }}">
        <meta charset="utf-8">
        <title>{% if html_title is defined %}{{ html_title }} â€“ {% endif %}Hipper</title>
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <link rel="stylesheet" href="{{ asset('app.css') }}" crossorigin="anonymous">
        <meta name="csrf" class="js-csrf" content="{{ csrf_token }}">
        <meta name="user_agent_profile" class="js-user-agent-profile" content='{{ user_agent_profile|json_encode|raw }}'>
    </head>

    <body{% if bodyClassList %} class="{{ bodyClassList|join(' ') }}"{% endif %}>
        {% include 'icon_sprite.twig' %}

        {% if not hideNavigation %}
            {% include '_navigation.twig' %}
        {% endif %}

        <div class="c-page-content js-page-content" tabindex="-1">
            {% block content %}{% endblock %}
        </div>

        <script src="{{ asset('app.js') }}" crossorigin="anonymous"></script>
    </body>
</html>
