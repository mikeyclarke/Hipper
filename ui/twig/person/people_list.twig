{% extends '_app_sidebar_layout.twig' %}

{% block navigational_header %}
<header class="c-app-header--hide-at-medium">
    <div class="c-app-header__top-bar">
        {% include '_mobile_navigation_toggle.twig' %}

        <div class="c-app-header__compass">
            <span class="c-app-header__compass-name">People</span>
        </div>
    </div>
</header>

<div class="c-section-header--hide-at-small">
    <h1 class="c-section-header__title">People at {{ organization.name }}</h1>

    <p class="c-section-header__subheading">Meet everyone at {{ organization.name }}! Find out a little about the people that you work with</p>
</div>
{% endblock %}

{% block content %}

<ol class="c-card-list--pad-bottom">
    {% for person in people_list %}
        {% include '_card_list_item.twig' with {
            avatar_initials: person.abbreviated_name,
            avatar_type: 'initials',
            link_href: person.route,
            meta: [
                {
                    label: 'Email address',
                    icon: 'email',
                    value: person.email_address,
                },
            ],
            timestamp: person.created,
            timestamp_label: 'Joined',
            title: person.name,
            description: person.job_role_or_title,
        } only %}
    {% endfor %}
</ol>

{% endblock %}
