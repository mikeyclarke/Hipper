{% extends '_app_sidebar_layout.twig' %}

{% block navigational_header %}{% include 'project/_project_header.twig' %}{% endblock %}

{% block tab_bar %}{% include 'project/_project_tabs.twig' with { active_tab: 'members' } %}{% endblock %}

{% block content %}

<ol class="c-card-list--pad-bottom">
    {% for person in people_list %}
        {% include '_card_list_item.twig' with {
            avatar_initials: person.abbreviated_name,
            avatar_type: 'initials',
            link_href: person.route,
            meta: [
                {
                    label: 'Email address',
                    icon: 'email',
                    value: person.email_address,
                },
            ],
            timestamp: person.created,
            timestamp_label: 'Joined',
            title: person.name,
            description: person.job_role_or_title,
        } only %}
    {% endfor %}
</ol>

{% endblock %}
