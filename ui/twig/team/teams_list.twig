{% extends '_app_sidebar_layout.twig' %}

{% block navigational_header %}
<header class="c-app-header--hide-at-medium">
    <div class="c-app-header__top-bar">
        {% include '_mobile_navigation_toggle.twig' %}

        <div class="c-app-header__compass">
            <span class="c-app-header__compass-name">Teams</span>
        </div>
    </div>
</header>

<div class="c-section-header--hide-at-small">
    <h1 class="c-section-header__title">Teams at {{ organization.name }}</h1>

    <p class="c-section-header__subheading">Take a look at what they do, who belongs to them, and what theyâ€™re working on</p>
</div>
{% endblock %}

{% block content %}

<ol class="c-card-list--pad-bottom">
    {% for team in teams_list %}
        {% include '_card_list_item.twig' with {
            avatar_initials: team.name|trim|first|upper,
            avatar_type: 'initials',
            link_href: team.route,
            timestamp: team.created,
            timestamp_label: 'Created',
            title: team.name,
            description: team.description,
        } only %}
    {% endfor %}
</ol>

{% endblock %}
